<body class="recipe">

	<div class="background" style="background-image: url('{{{project_config.dir_img}}}{{{image}}}');">
		<h1>{{title}}</h1>
	</div>

	<p>
		Préparation: {{preparation_time}}min
	</p>

	<p>
		Cuisson: {{cooking_time}}min
	</p>

	<h2>Ingrédients</h2>
	<ul>
		{{#ingredients}}
		<li>{{quantity}}{{unit}} - {{type}}</li>
		{{/ingredients}}
	</ul>

	<h2>Instructions</h2>
	<ol>
		{{#instructions}}
		<li>{{.}}</li>
		{{/instructions}}
	</ol>
</body>
